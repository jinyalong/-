<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/xiaohui"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text1"
            android:layout_below="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="#0E36E2"
            android:textSize="10pt"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:id="@+id/username_zc"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="left|center_horizontal"
                android:src="@drawable/username"
                android:layout_marginLeft="5dp"
                android:visibility="visible"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:text="用户名："
                android:textSize="10pt"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textSize="10pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_zc"
            android:layout_below="@id/username_zc"
            android:layout_marginTop="6dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/name"
                android:layout_marginLeft="5dp" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:text="姓    名："
                android:textSize="10pt"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textSize="10pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/age_zc"
            android:layout_below="@id/name_zc"
            android:layout_marginTop="6dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/age"
                android:layout_marginEnd="5dp" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:text="年    龄："
                android:textSize="10pt"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="10pt" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Teleno_zc"
            android:inputType="number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_zc"
            android:layout_marginTop="6dp"
            android:gravity="center" >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="left|center_vertical"
                android:src="@drawable/phone"
                android:layout_marginEnd="5dp" />
            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:text="电    话："
                android:textSize="10pt"/>
            <TextView
                android:id="@+id/teleno"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textSize="10pt"/>
        </LinearLayout>


        <Button
            android:id="@+id/login_out"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@id/Teleno_zc"
            android:layout_marginTop="40dp"
            android:background="#B91313"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="退出登录"
            android:onClick="Login_out"/>
    </RelativeLayout>
</LinearLayout>
